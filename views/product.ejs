<!DOCTYPE html>
<html lang="es">

<head>
	<%- include('./partials/head'); %>
</head>
 
<body>
	<!-- Header -->
	<header class="main-header">
		<%- include('./partials/headerLogueado') %>
	</header>
	<!-- /Header -->
	<!-- product detail -->
	<% if(data.id = null){ %> 
		<h3 class="noproduct">No pudimos encontrar el producto que busc√°s.</h3>
	<% } else { %>
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title-detail"><%= data.name %></h2> 
			<h3 class="product-detail-description">Usuario: <a href="/users/profile/<%= data.users.id %>"> <%=data.users.name %> <%=data.users.surname %>  </a></h3>
				<% if (locals.user){ %> 
					<% if (locals.user.id == data.users_id){ %> 
						<div class="product-delete">
							<a href="/products/product-edit/<%= data.id %> ">Editar</a>
							<form action="/products/product-delete/<%= data.id %>" method="POST">
								<button type="submit"> <i class="fas fa-trash"></i> </button>
							</form>
						</div>
					<% } %>
	             <% } %>
		<% } %>
		</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">

					<img src="/images/products/<%= data.image %>" alt="" class="product-detail-img">

					<h3 class="product-detail-description"><%= data.name %> </h3>
						
					<p class="product-detail-description"><%= data.description %></p>
					<!-- <p class="product-detail-options"> Marca: Nike</p>
					<p class="product-detail-options">Color: Rosa</p>
					<p class="product-detail-options"> Talle: 38 </p>  -->
					
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						
						<% for(let i=0; i < data.comments.length ; i++ ){ %>
							<article>
							<img src="/images/users/<%= data.comments[i].users.avatar %>" alt=" Imagen de <%= data.comments[i].users.name %>">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile/<%= data.comments[i].users.id %>"> <%= data.comments[i].users.name %> <%= data.comments[i].users.surname %></a>  </strong>
								</p>
								<p class="user"> <%= data.comments[i].text %> </p>
								<% if(locals.user) { %>
                                    <%if (locals.user.id == data.comments[i].users.id){ %> 
                                    <form action="/products/delete-comment/<%= data.comments[i].id %>" method="POST">
                                        <button class="btntrash fas fa-trash fa-2x" type="submit"></button>
                                    </form>
                                    <% } %>
                                <% } %>
							</div>
						    </article>
						<% } %>

					</section>
					<form class="form" action="/products/<%= data.id %>/comment" method="POST">
						<input class="form-input" type="text"  name="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer') %> 
	</footer>
	<!-- /footer -->

</body>	
</html>