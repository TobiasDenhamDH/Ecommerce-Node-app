			<% for (let i=4; i < 12 ; i ++) { %> 	
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= productos[i].id %>">
							<figure class="product-box_image">
							<img src="<%= productos[i].foto %>" alt="">	  
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[i].nombre %> </h2>
							<p><%= productos[i].marca %></p>
							<p> <%= productos[i].color %> </p>
							<p><%= productos[i].talle %> </p>
							<p> <%= productos[i].comentario %> </p>
						</article>
						</a>
					</section>
				</div>
			<% } %> 
