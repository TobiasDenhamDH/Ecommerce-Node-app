<!DOCTYPE html>
<html lang="es">

<head>
	<%- include("./partials/head") %> 
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<%- include('./partials/headerLogueado') %>
	</header>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/products/banner-nike.jpeg" alt="Banner de zapatillas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
