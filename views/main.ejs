<!DOCTYPE html>
<html lang="es">

<head>
	<%- include("./partials/head") %> 
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<% if (user != null) { %>
			<%- include('./partials/headerLogueado') %> 
		<% } else { %>
			<%- include('./partials/header') %> 
		<% } %>
	</header>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/products/banner-nike.jpeg" alt="Banner de zapatillas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">• Novedades •</h2>
			</div>
			<!-- Show the "ultimos" products -->			
			<% for (let i=0; i < 4 ; i ++) { %> 	
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= data[i].id %> ">
							<figure class="product-box_image">
								<img src="/images/products/<%= data[i].image %>" alt="Imagen de <%= data[i].name %> " >	  
							</figure>
						    <article class="product-box_data">
								<h2> <%= data[i].name %> </h2>
								<p> Descripcion:<%= data[i].description %></p>								
								<a href="/users/profile/<%=data[i].users.id %>"><p class="hover"> Usuario: <%= data[i].users.name %> <%= data[i].users.surname %> </p></a>
								<p> Comentarios: <%= data[i].comments.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 
			
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">• Más comentados •</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<% for (let i=4; i < data.length ; i ++) { %> 	
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= data[i].id %> ">
							<figure class="product-box_image">
								<img src="/images/products/<%= data[i].image %>" alt="Imagen de <%= data[i].name %> ">	  
							</figure>
							<article class="product-box_data">
								<h2> <%= data[i].name %> </h2>
								<p> Descripcion: <%= data[i].description %></p>
								<a href="/users/profile/<%=data[i].users.id %>"><p class="hover"> Usuario: <%= data[i].users.name %><%= data[i].users.surname %> </p></a>
								<p> Comentario: <%= data[i].comments.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 

		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer') %> 
	</footer>
	<!-- /footer -->
</body>	
</html>